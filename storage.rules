rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write their own files
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Specific rules for different folders
    match /list-images/{filename} {
      allow read: if true; // Public read access for list images
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    match /avatars/{userId}/{filename} {
      allow read: if true; // Public read for avatars
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /lists/{userId}/{filename} {
      allow read: if true; // Public read for list cover images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /places/{allPaths=**} {
      allow read: if true; // Public read for place photos
      allow write: if request.auth != null; // Authenticated users can upload place photos
    }
  }
}
